[cells]
  root = .
  buck = .buck
  prelude = prelude
  toolchains = toolchains
  none = none

[cell_aliases]
  config = prelude
  ovr_config = prelude
  fbcode = none
  fbsource = none
  fbcode_macros = none

[external_cells]
  # This provides the 'genrule' definition and other standard rules
  prelude = bundled

[parser]
  # Add the 'buck' cell to the detector spec
  target_platform_detector_spec = \
    target:root//...->prelude//platforms:default \
    target:buck//...->prelude//platforms:default \
    target:prelude//...->prelude//platforms:default \
    target:toolchains//...->prelude//platforms:default

[build]
  # This tells Buck2 where it is allowed to run the genrule commands
  execution_platforms = prelude//platforms:default

[project]
  ignore = .git